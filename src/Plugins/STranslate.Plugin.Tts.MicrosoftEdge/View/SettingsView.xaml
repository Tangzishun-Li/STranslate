<UserControl
    x:Class="STranslate.Plugin.Tts.MicrosoftEdge.View.SettingsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ikw="http://schemas.inkore.net/lib/ui/wpf"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
    xmlns:vm="clr-namespace:STranslate.Plugin.Tts.MicrosoftEdge.ViewModel"
    d:DataContext="{d:DesignInstance Type=vm:SettingsViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <ikw:SimpleStackPanel Spacing="12">
        <!--  API URL 配置  -->
        <ui:SettingsCard Header="{DynamicResource STranslate_Plugin_Tts_MicrosoftEdge_Url}">
            <ui:SettingsCard.HeaderIcon>
                <ui:FontIcon Icon="{x:Static ui:FluentSystemIcons.Globe_24_Regular}" />
            </ui:SettingsCard.HeaderIcon>
            <TextBox
                MinWidth="300"
                ui:ControlHelper.PlaceholderText="{DynamicResource STranslate_Plugin_Tts_MicrosoftEdge_Url_Placeholder}"
                Text="{Binding Url}" />
        </ui:SettingsCard>

        <!--  Voice  -->
        <ui:SettingsCard Header="{DynamicResource STranslate_Plugin_Tts_MicrosoftEdge_Voice}">
            <ui:SettingsCard.Description>
                <ui:HyperlinkButton Content="{DynamicResource STranslate_Plugin_Tts_MicrosoftEdge_Voice_Description}" NavigateUri="https://github.com/wangwangit/tts?tab=readme-ov-file#-%E6%94%AF%E6%8C%81%E7%9A%84%E8%AF%AD%E9%9F%B3" />
            </ui:SettingsCard.Description>
            <ui:SettingsCard.HeaderIcon>
                <ui:FontIcon Icon="{x:Static ui:FluentSystemIcons.PersonVoice_24_Regular}" />
            </ui:SettingsCard.HeaderIcon>
            <TextBox
                MinWidth="300"
                ui:ControlHelper.PlaceholderText="{DynamicResource STranslate_Plugin_Tts_MicrosoftEdge_Voice_Placeholder}"
                Text="{Binding Voice}" />
        </ui:SettingsCard>

        <!--  Speed  -->
        <ui:SettingsCard Header="{DynamicResource STranslate_Plugin_Tts_MicrosoftEdge_Speed}">
            <ui:SettingsCard.HeaderIcon>
                <ui:FontIcon Icon="{x:Static ui:FluentSystemIcons.TopSpeed_24_Regular}" />
            </ui:SettingsCard.HeaderIcon>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="30" />
                </Grid.ColumnDefinitions>
                <Slider
                    IsSnapToTickEnabled="True"
                    LargeChange="0.5"
                    Maximum="2"
                    Minimum="0.5"
                    SmallChange="0.1"
                    TickFrequency="0.1"
                    TickPlacement="Both"
                    Value="{Binding Speed}" />
                <TextBlock
                    Grid.Column="1"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Text="{Binding Speed, StringFormat=F1}" />
            </Grid>
        </ui:SettingsCard>

        <!--  Pitch  -->
        <ui:SettingsCard Header="{DynamicResource STranslate_Plugin_Tts_MicrosoftEdge_Pitch}">
            <ui:SettingsCard.HeaderIcon>
                <ui:FontIcon Icon="{x:Static ui:FluentSystemIcons.DesktopSpeaker_24_Regular}" />
            </ui:SettingsCard.HeaderIcon>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="30" />
                </Grid.ColumnDefinitions>
                <Slider
                    Maximum="50"
                    Minimum="-50"
                    TickFrequency="1"
                    Value="{Binding Pitch}" />
                <TextBlock
                    Grid.Column="1"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Text="{Binding Pitch}" />
            </Grid>
        </ui:SettingsCard>

        <!--  Style  -->
        <ui:SettingsCard Header="{DynamicResource STranslate_Plugin_Tts_MicrosoftEdge_Style}">
            <ui:SettingsCard.Description>
                <ui:HyperlinkButton Content="{DynamicResource STranslate_Plugin_Tts_MicrosoftEdge_Style_Description}" NavigateUri="https://github.com/wangwangit/tts?tab=readme-ov-file#%E6%94%AF%E6%8C%81%E7%9A%84%E8%AF%AD%E9%9F%B3%E9%A3%8E%E6%A0%BC" />
            </ui:SettingsCard.Description>
            <ui:SettingsCard.HeaderIcon>
                <ui:FontIcon Icon="{x:Static ui:FluentSystemIcons.StyleGuide_24_Regular}" />
            </ui:SettingsCard.HeaderIcon>
            <TextBox
                MinWidth="100"
                ui:ControlHelper.PlaceholderText="{DynamicResource STranslate_Plugin_Tts_MicrosoftEdge_Style_Placeholder}"
                Text="{Binding Style}" />
        </ui:SettingsCard>

        <!--  Support  -->
        <ui:SettingsCard Description="{DynamicResource STranslate_Plugin_Tts_MicrosoftEdge_Support_Description}" Header="{DynamicResource STranslate_Plugin_Tts_MicrosoftEdge_Support}">
            <ui:SettingsCard.HeaderIcon>
                <ui:FontIcon Icon="{x:Static ui:FluentSystemIcons.PersonSupport_20_Regular}" />
            </ui:SettingsCard.HeaderIcon>
            <ui:HyperlinkButton Content="github.com/wangwangit/tts/" NavigateUri="https://github.com/wangwangit/tts/" />
        </ui:SettingsCard>
    </ikw:SimpleStackPanel>
</UserControl>